<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gambar">


    <EditText
        android:id="@+id/angka"
        android:layout_marginTop="50dp"
        android:hint="Angka"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_hasil"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/angka"
        android:text="sin" />

    <Button
        android:id="@+id/btn_hasil2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_hasil"
        android:layout_below="@+id/angka"
        android:text="cos" />

    <Button
        android:id="@+id/btn_hasil3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_hasil2"
        android:layout_below="@+id/angka"
        android:text="tan" />

    <Button
        android:id="@+id/btn_hasil4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_hasil"
        android:layout_marginLeft="30dp"
        android:text="cotan" />

    <Button
        android:id="@+id/btn_hasil5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_hasil2"
        android:layout_toRightOf="@id/btn_hasil4"
        android:text="cosec" />

    <Button
        android:id="@+id/btn_hasil6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_hasil3"
        android:layout_toRightOf="@id/btn_hasil5"
        android:text="sec" />

    <Button
        android:id="@+id/btn_hasil7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/btn_hasil5"
        android:text="logaritma" />



    <TextView
        android:id="@+id/tv_hasil"
        android:text="0.0"
        android:layout_below="@id/btn_hasil7"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>